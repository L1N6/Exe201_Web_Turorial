<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EXE201_Tutor_Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css2/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EXE201_Tutor_Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Paytone+One:wght@400&display=swap" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Paytone+One:wght@400&display=swap" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        body {
            margin: 0;
            font-family: 'Arial', sans-serif;
            background-color: #f2f2f2;
        }

        .chat-popup {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background-color: #614DE1;
            color: white;
            padding: 10px;
            border-radius: 5px;
            cursor: pointer;
            z-index: 1000;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            transition: background-color 0.3s ease-in-out;
        }

            .chat-popup:hover {
                background-color: #4b38aa;
            }

        .chat-box {
            display: none;
            position: fixed;
            bottom: 80px;
            right: 20px;
            width: 300px;
            background-color: #fff;
            border: 1px solid #ccc;
            border-radius: 8px;
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
            z-index: 1000;
            overflow: hidden;
            transform-origin: bottom right;
            transform: scaleY(0);
            transition: transform 0.3s ease-in-out;
        }

        .chat-popup:hover .chat-box {
            transform: scaleY(1);
        }

        .close-btn {
            cursor: pointer;
            float: right;
            padding: 10px;
            font-size: 18px;
            color: #614DE1;
            transition: color 0.3s ease-in-out;
        }

            .close-btn:hover {
                color: #4b38aa;
            }

        .chat-content {
            padding: 10px;
            max-height: 200px;
            overflow-y: auto;
        }

        .input-box {
            padding: 10px;
            display: flex;
        }

            .input-box input {
                flex: 1;
                padding: 8px;
                margin-right: 5px;
                border: 1px solid #ccc;
                border-radius: 5px;
                outline: none;
            }

            .input-box button {
                background-color: #614DE1;
                color: white;
                border: none;
                padding: 8px 12px;
                cursor: pointer;
                border-radius: 5px;
                transition: background-color 0.3s ease-in-out;
            }

                .input-box button:hover {
                    background-color: #4b38aa;
                }

        a[b-mv7sg3oajt] {
            color: #614DE1 !important;
        }

        a, a:hover {
            text-decoration: none;
        }

    </style>
</head>
<body>
    <div class="chat-popup" onclick="toggleChat(event)">
        <span>Chat with us</span>
        <div class="chat-box" id="chatBox" onclick="stopPropagation(event)">
            <div class="close-btn" onclick="toggleChat(event)">&times;</div>
            <div class="chat-content">
                <p>Welcome! How can we assist you today?</p>
            </div>
            <div class="input-box">
                <input type="text" placeholder="Type your message..." />
                <button onclick="sendMessage()">Send</button>
            </div>
        </div>
    </div>

    <div class="main-container-2">
        <div class="rectangle">
            <span class="demo">DEMO </span>
            <div class="flex-row-dca">
                <a href="@Url.Action("Index", "Home")" class="bombastic-learning-hub">
                    BOMBASTIC <br />LEARNING HUB</a>
                <div class="regroup-i">
                    <div class="rectangle-1">
                        <img src="../img/header/avatar.jpg"/>
                    </div>
                    <a href="@Url.Action("Profile", "User")" class="button"><span class="user">Người Dùng</span></a>
                </div>
                <div class="button-2">
                    <form>
                        <button type="submit" class="rectangle-3"><span class="search">Tìm kiếm</span></button>
                        <input class="tim-kiem-mon-hoc" placeholder="Tìm kiếm môn học" style="background: transparent;" />
                        <div class="vector"></div>
                    </form>
                </div>
            </div>
        </div>
         @RenderBody()
    </div>
    <footer>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<script>
    function toggleChat(event) {
        event.stopPropagation();
        var chatBox = document.getElementById('chatBox');
        chatBox.style.display = (chatBox.style.display === 'none' || chatBox.style.display === '') ? 'block' : 'none';
    }

    function toggleChatBox(event) {
        event.stopPropagation();
        var chatBox = document.getElementById('chatBox');
        chatBox.style.display = (chatBox.style.display === 'none' || chatBox.style.display === '') ? 'block' : 'none';
    }

    function sendMessage(event) {
        event.stopPropagation();
        var inputBox = document.querySelector('.input-box input');
        var message = inputBox.value.trim();

        if (message !== '') {
            var chatContent = document.querySelector('.chat-content');
            chatContent.innerHTML += '<p>You: ' + message + '</p>';
            inputBox.value = '';
        }
    }
    function stopPropagation(event) {
        event.stopPropagation();
    }
    // Lưu trạng thái của trang
    window.addEventListener('scroll', function () {
        sessionStorage.setItem('scrollPosition', window.scrollY);
    });

    // Phục hồi trạng thái của trang
    window.addEventListener('DOMContentLoaded', function () {
        const scrollPosition = sessionStorage.getItem('scrollPosition');
        if (scrollPosition) {
            window.scrollTo(0, scrollPosition);
        }
    });
</script>
