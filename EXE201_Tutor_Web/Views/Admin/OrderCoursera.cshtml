@model EXE201_Tutor_Web.Entities.OrderCourseraViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Quản lý Sinh viên</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        /* Background đẹp cho trang admin */
        body {
            background-image: url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSHZsHA8laY6bpt5w5pjVdxEIrEKwhLqhT3cvenNdArMA&s'); /* Đường dẫn đến hình nền */
            background-size: cover; /* Phủ đầy phần tử cha */
            background-repeat: no-repeat; /* Không lặp lại hình ảnh */
            background-position: center center; /* Canh giữa */
            background-attachment: fixed; /* Giữ ảnh nền cố định khi cuộn trang */
            height: 100vh; /* Đảm bảo chiều cao của body bằng với trình duyệt */
            margin: 0; /* Loại bỏ khoảng trắng */
            padding: 0; /* Loại bỏ khoảng trắng */
        }

        /* Định dạng cho ảnh avatar */
        .avatar {
            max-width: 100px;
            max-height: 100px;
            border-radius: 50%; /* Bo tròn ảnh avatar */
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <!-- Dashboard -->
        <div class="row mt-3 mb-3">
            <div class="col-md-3">
                <div class="bg-light p-3 rounded">
                    <h1 class="text-primary mb-3">Admin</h1>
                    <ul class="list-group">
                        <li class="list-group-item"><a href="#" class="text-dark">Quản lý Khóa học</a></li>
                        <li class="list-group-item"><a asp-controller="Admin" asp-action="Student" class="text-dark">Quản lý Sinh viên</a></li>
                        <li class="list-group-item"><a asp-controller="Admin" asp-action="OrderCoursera" class="text-dark">Quản lý Đơn hàng</a></li>
                    </ul>
                </div>
            </div>

            <div class="col-md-9 mb-3">
                <div class="bg-light p-3 rounded h-100">
                    <h2>Manage Orders</h2>
                    <form method="get" action="@Url.Action("OrderCoursera", "Admin")">
                        <div class="form-row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <input type="text" class="form-control" name="searchText" value="@Model.SearchText" placeholder="Search by Student Name or Coursera Name or BankDescription">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <select class="form-control" name="status">
                                        <option value="">-- Select Status --</option>
                                        <option value="Accepted">Accepted</option>
                                        <option value="Pending">Pending</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary mb-2">Search</button>
                            </div>
                        </div>
                    </form>
                    <table class="table table-bordered table-striped">
                        <thead class="thead-light">
                            <tr>
                                <th>ID</th>
                                <th>Email</th>
                                <th>Student Name</th>
                                <th>Coursera Name</th>
                                <th>Money</th>
                                <th>Status</th>
                                <th>Date Accepted</th>
                                <th>Bank Description</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.OrderCourseras)
                            {
                                <tr>
                                    <td>@order.OrderCourseraId</td>
                                    <td>@order.Student.Email</td>
                                    <td>@order.Student.Name</td>
                                    <td>@order.Coursera.Name</td>
                                    <td>@order.Money</td>
                                    @if (order.Status == null || !order.Status.Value)
                                    {
                                        <td class="text-danger">Pending</td>
                                    }
                                    else
                                    {
                                        <td class="text-success">Accepted</td>
                                    }
                                    <td>@(order.DateAccepted != null ? order.DateAccepted.Value.ToShortDateString() : "N/A")</td>
                                    <td>@(order.BankDescription != null ? order.BankDescription : "N/A")</td>
                                    @if (order.Status == null || !order.Status.Value)
                                    {
                                        <td> <a asp-controller="Admin" asp-action="AcceptedOrder" asp-route-id="@order.OrderCourseraId" class="text-primary">Accept</a></td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- Pagination -->
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("OrderCoursera", "Admin", new { searchText = Model.SearchText, page = i })">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
